
#Cambiar de intel graphics a Nvidia

prime-select query //dice que estas usando

sudo prime-select intel/nvidia


#Comandos de docker

docker ps -a //muestra todas las instancias de docker, incluso las dormidas

docker stop <nombre-instancia>  

docker image rm <nombre-imagen>  //borrar imagenes de docker

docker image ls  //mustra repositorios de imagenes

docker build -t <nombre-instancia> .  //crea una instancia en minusculas y sin "_"

docker run <nombre-instancia>   //corre la instancia (-it la hace interactiva)
